header{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 2rem;
    padding: 0 4rem 0 2rem;
}

header .chat-logo{
    display: flex;
    flex: row;
    flex-wrap: nowrap;
    padding: 1rem;
}

header .chat-logo span {
    display: flex;
    flex-direction: row;
    width:20%;
    height: 20%;
    align-items: center;
    justify-content: center;
}

.chat-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.selected-user {
    width: 100%;
    padding: 0 15px;
    min-height: 64px;
    line-height: 64px;
    border-bottom: 1px solid #e6ecf3;
    -webkit-border-radius: 0 3px 0 0;
    -moz-border-radius: 0 3px 0 0;
    border-radius: 0 3px 0 0;
}

.selected-user span {
    line-height: 100%;
